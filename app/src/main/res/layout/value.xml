<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/current_eth_container"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginBottom="-12dp"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/current_value_rounding_indicator"
                android:background="?selectableItemBackgroundBorderless"
                app:fontFamily="sans-serif-thin"
                android:textSize="24sp"
                android:text="~"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/current_eth"
                app:fontFamily="sans-serif"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:textColor="@color/fgColor"
                android:textSize="32sp"
                android:lines="1"
                android:inputType="numberDecimal"
                tools:text="\?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                app:fontFamily="sans-serif-thin"
                android:textSize="32sp"
                tools:text="ETH"
                android:textColor="@color/colorAccent"
                android:lines="1"
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/current_token_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="-12dp"
                  android:id="@+id/current_fiat_container"
                  android:orientation="horizontal">

        <TextView
                android:id="@+id/current_fiat_rounding_indicator"
                android:background="?selectableItemBackgroundBorderless"
                app:fontFamily="sans-serif-thin"
                android:textSize="24sp"
                android:text="~"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/current_fiat"
                app:fontFamily="sans-serif-condensed"
                android:imeOptions="flagNoExtractUi|flagNoFullscreen"
                android:textSize="24sp"
                android:textColor="@color/fgColor"
                android:lines="1"
                android:inputType="numberDecimal"
                tools:text="\?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/current_fiat_symbol"
                android:background="?selectableItemBackgroundBorderless"
                app:fontFamily="sans-serif-thin"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                tools:text="EUR"
                android:lines="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</merge>