<shortcuts xmlns:tools="http://schemas.android.com/tools"
           xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
            android:shortcutId="createtx"
            android:enabled="true"
            android:icon="@mipmap/ic_send_shortcut"
            android:shortcutShortLabel="@string/transact"
            android:shortcutLongLabel="@string/transact"
            android:shortcutDisabledMessage="@string/transact_disabled"
            tools:targetApi="n_mr1">
        <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="org.walleth"
                android:targetClass="org.walleth.base_activities.CreateTransactionActivity"/>

    </shortcut>

    <shortcut
            android:shortcutId="scan"
            android:enabled="true"
            android:icon="@mipmap/ic_camera_shortcut"
            android:shortcutShortLabel="@string/scan"
            android:shortcutLongLabel="@string/scan"
            android:shortcutDisabledMessage="@string/scan_disabled"
            tools:targetApi="n_mr1">
        <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="org.walleth"
                android:targetClass="org.walleth.qr.scan.QRScanActivityAndProcessActivity"/>
    </shortcut>

</shortcuts>
